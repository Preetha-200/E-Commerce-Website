    <section id="cart">
        <div id="cart-table">
            <% if (cart.length > 0) { %>
                <div style="margin: 40px 40px;">
                    <% cart.forEach(product => { %>
                        <a href="/product-details?id=<%= product.productId %>">
                            <div class="c-table">
                                <img src="<%= product.product_img %>" alt="Product Image" width="200px">
                                <div class="c-p-details">
                                    <a href="/product-details?id=<%= product.productId %>">
                                        <p style="color: rgb(243, 97, 0); font-size: 15px;"><%= product.productBrand %></p>
                                        <p style="color: rgb(27, 27, 27); font-size: 16px; display: -webkit-box; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; -webkit-line-clamp: 2; line-height: 1.2; max-height: calc(1.5em * 2);"><%= product.productFeature %></p>
                                    </a>
                                    <form method="POST" action="/cart/update-quantity">
                                        <label for="quantity">qty</label>
                                        <input type="hidden" name="productId" value="<%= product.productId %>">
                                        <input type="number" name="quantity" value="<%= product.quantity %>" min="1" style="width: 60px;">
                                        <button type="submit" class="update-btn">OK</button>
                                    </form>
                                    <div class="c-p-button">
                                        <p><%= product.currencySymbol %><%= product.convertedPrice * product.quantity %></p>
                                        <form method="POST" action="/cart/remove">
                                            <input type="hidden" name="productId" value="<%= product.productId %>">
                                            <button type="submit" class="remove-btn">Remove</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </a>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="cart_empty">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <p>! YOUR CART IS EMPTY</p>
                </div>
            <% } %>
        </div>      
        <div id="similar-products" style="margin-left: 0; background-color: rgb(255, 249, 241); width: 300px;">
            <h3 style="margin: 15px 70px;">Similar Products</h3>
            <div class="similar-products">
                <% if (similarProducts.length > 0) { %>
                    <div class="product-list">
                        <% similarProducts.forEach(product => { %>
                            <div class="product-item" style="margin-bottom: 13px;">
                                <a href="/product-details?id=<%= product.id %>">
                                    <div class="product">
                                        <div class="wishlist-icon" data-id="<%= product.id %>" data-is-in-wishlist="<%= product.isInWishlist %>">
                                            <i class="<%= product.isInWishlist ? 'fas red-heart' : 'far grey-heart' %> fa-heart"></i>
                                        </div>
                                        <div class="rating">
                                            <i class="fas fa-star" style="color: goldenrod;"></i>
                                            <span class="rating-value">
                                                <%= (typeof product.rating === 'number' && !isNaN(product.rating)) ? product.rating.toFixed(1) : '4.0' %>
                                            </span>
                                        </div>
                                        <img src="<%= product.product_img %>" alt="<%= product.p_category %>">
                                        <p style="color: rgb(243, 97, 0); font-size: 13px;"><%= product.brand %></p>
                                        <p style="color: rgb(27, 27, 27); font-size: 14px; width: auto; display: -webkit-box; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; -webkit-line-clamp: 2; line-height: 1.2; max-height: calc(1.5em * 2);"><%= product.p_features %></p>
                                        <p style="color: grey; font-size: 13px;"><%= product.p_category %></p>
                                        <p style="color: rgb(27, 27, 27); font-size: 13px;"> <%= product.currencySymbol %><%= product.convertedPrice %></p>
                                    </div>
                                </a>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p>No similar products available.</p>
                <% } %>
            </div>
        </div>        
           
