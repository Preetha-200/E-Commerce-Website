    <style>
        #cart{
            display: grid;
            grid-template-columns: 70% 30%;
        }
        #cart-table{
            padding: 0 40px;
        }
        .c-table{
            display: flex;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            padding: 15px;
            transition: transform 0.3s ease;
            margin: 20px 10px;
        }
        .c-p-details{
            margin-left: 20px;
        }
        .c-p-button{
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 85%;
        }
        .update-btn{
            font-size: small;
            color: azure;
            background-color: rgb(44, 44, 44);
        }
        .remove-btn{
            background-color: goldenrod;
            border: 1px solid goldenrod;
            color: #fff6f6;
            width: 80px;
            height: 30px;
        }
        .products{
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            margin: 30px;
        }
        .product{
            position: relative;
            width: 240px;
            height: 360px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            margin: 0 30px;
        }
        .product img{
            width: 220px;
            margin: 10px;
        } 
        .wishlist-icon {
            position: absolute;
            top: 16px;
            right: 16px;
            background-color: rgb(255, 255, 255);
            width: 35px;
            height: 35px;
            border-radius: 50%;
            cursor: pointer;
        }
        .wishlist-icon i{
            position: relative;
            top: 5px;
            left: 5px;
            font-size: 1.6rem;
        }
        .red-heart {
            color: red !important;
        }
        .grey-heart {
            color: grey !important;
        }
        .rating{
            position: absolute;
            background-color:rgb(255, 255, 255, 0.7);
            width: 50px;
            height: 15px;
            padding: 5px;
            font-size: 14px;
            z-index: 99;
            top: 190px;
            left: 15px;
        }
        .rating i{
            position: relative;
        }
        .rating span{
            position: relative;
            color: black;
        }
        .cart_empty{
            width: 100%; 
            height: 13%; 
            color: grey;
            background-color: rgb(249, 255, 253);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .cart_empty i{
            font-size: 100px;
            opacity: 30%;
        }
    </style>
</head>
