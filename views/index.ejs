    <style>
        #new-products, #recommended-products{
            width: 100%;
            height: 430px;
            margin: 40px 10px;
        }
        #new-products h3, #recommended-products h3{
            margin-left: 40px;
            margin-top: 0;
            font-family: 'Cinzel';
            font-size: 23px;
            color: #2c2c2c;
        }
        .product-wrapper{
            position: relative;
            margin-left: 3%;
        }
        .rating{
            position: absolute;
            background-color:rgb(255, 255, 255, 0.7);
            width: 50px;
            height: 15px;
            padding: 5px;
            font-size: 14px;
            z-index: 99;
            top: 200px;
            left: 15px;
        }
        .wishlist-icon {
            position: absolute;
            top: 16px;
            right: 16px;
            background-color: rgb(255, 255, 255);
            width: 35px;
            height: 35px;
            border-radius: 50%;
            cursor: pointer;
        }
        .wishlist-icon i{
            position: relative;
            top: 5px;
            left: 5px;
            font-size: 1.6rem;
        }
        .s-prev-btn, .s-next-btn, .swiper4-prev, .swiper4-next{
            top: 45%;
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            font-size: 20px;
            cursor: pointer;
        }
        .s-prev-btn:hover, .s-next-btn:hover, .swiper4-prev:hover, .swiper4-next:hover { background-color: rgba(0, 0, 0, 0.8);}
        .s-prev-btn::after, .s-next-btn::after, .swiper4-prev::after, .swiper4-next::after { font-size: 16px;}
        .product p{           
            font-weight: normal;
            margin: 5px 10px;
        }
        .product{
            width: 240px;
            height: 370px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            margin: 0;
        }
        .product img{
            width: 220px;
            margin: 10px;
        } 
        .product-features{font-size: 14px;}       
        .swiper-container{
            position: relative;
            width: 100%;
        }
        .red-heart { color: red !important;}
        .grey-heart { color: grey !important;}
        @media (max-width: 540px){
            #new-products, #recommended-products{
                height: 300px;
                margin: 40px 2%; 
            }
            #recommended-products{height: 320px;}
            #new-products h3,  #recommended-products h3{
                margin-left: 2%;
                font-size: 18px;
            }
            .product-brand, .product-features{ font-size: 13px;}
            .product-category{ display: none;}
            .product-price{ font-size: 12px;}                             
            .rating{
                width: 45px;
                height: 12px;
                padding: 3px;
                font-size: 13px;
                top: 54%;
                left: 5%;
            }
            .wishlist-icon {
                top: 3%;
                right: 5%;
                width: 30px;
                height: 30px;
            }
            .wishlist-icon i{
                top: 15%;
                left: 15%;
                font-size: 20px;
            }
            .s-prev-btn, .s-next-btn, .swiper4-prev, .swiper4-next{ display: none;}
            .product p{ font-weight: normal;}
            .product{
                width: 170px;
                height: 270px;
                border-radius: 5px;
                margin: 0;
            }
            .product img{
                width: 98%;
                margin: 1%;
            }  
        }
        @media (max-width: 430px){
            #new-products, #recommended-products{
                height: 300px;
                margin: 30px 2%; 
